<% projects = current_site.the_post_type("projects")%>

<% activemenu =  @post.the_categories.map{|c| [c.slug]} %>

<div class="container pt-5 pb-4">
	<div class="row">

			<div class="col-12 submenu col-md-3">
				<div class="tag "><%= t('projects')%></div>
					<!-- / Categories -->
					<ul class="portfolio">
						<li class="<%= activemenu == 'projects' ? 'active' : ''%> "><a href="<%=projects.the_url%>"><%=t('all')%></a>
				        </li>
						<% projects.the_categories.where.not(:name => "Uncategorized").decorate.each do |cat|%>

				           <li class="<%= activemenu.include?([cat.the_slug])  ? 'active' : ''%> "><a href="<%=cat.the_url%>"><%=cat.the_title%></a>
				                </li>
				        <%end%>
					</ul>
			</div>
			
			<div class="col-12 col-md-9 article">
				<%= raw @post.the_content%>
				
			</div>				
	</div>
</div>