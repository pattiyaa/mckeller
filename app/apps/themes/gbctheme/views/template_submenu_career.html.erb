</div>
<div class="container pb-3 pt-4">

	<div class="row">

			<div class="col-xs-12 col-md-3 submenu">
					<div class="tag">
						<%= t('jobs')%>
					</div>

					<!-- / Subpages -->

					<%= raw get_nav_menu('careermenu', 'career')%>
			</div>
			<div class="col-12  col-md-9 joblist">
			
				<%= raw @post.the_content %>	
			</div>
	</div>
</div>