<% contact = current_site.the_post_type("contact")%>
<div class="container">
	<div class="">
		<br>
		<section id="contact_page" itemscope="" itemtype="https://schema.org/ContactPage">
			<!-- / Info and maps -->
			<div class="col-md-3">
				<div class="tag"><%= t('contact')%></div>
			</div>
			<div class="col-md-9">
				<!-- /ENGLISCH ADDRESS -->
				<% contact.the_posts.decorate.each_with_index do |office, index|%>
				<h2 class="blank">
					<%= office.the_title%>
					<small>
						<%= office.the_meta("summary")%>
					</small>
				</h2>
				<div class="office-info">
					<div class="address-info">
						<%= raw office.the_content%>
					</div>
					<div class="map">
						<%= raw office.the_field("map-code")%>
					</div>

				</div>
				<%end%>
			</div>
		</section>
	</div>
</div>