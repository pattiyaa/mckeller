<% contact = current_site.the_post_type("contact")%>
<% count =  contact.the_posts.count%>
<% @post = contact.the_posts[0].decorate%>

<div class="header-image" style="background-image:url(<%= @post.the_thumb_url %>); ">
</div>
<div class="container">
	<div class="">
		<br>
		<section id="contact_page" itemscope="" itemtype="https://schema.org/ContactPage">
			<!-- / Info and maps -->
			<div class="col-xs-12 col-sm-3">
				<div class="tag"><%= t('contact')%></div>
			</div>
			<div class="col-xs-12 col-sm-9">
				<!-- /ENGLISCH ADDRESS -->
				<% contact.the_posts.decorate.each_with_index do |office, index|%>
				
					<% if index < count-1 %>
					    <h2 class="blank">
							<%= office.the_title%>
							<small>
								<%= office.the_meta("summary")%>
							</small>
						</h2>
						<div class="office-info">
							<div class="address-info">
								<%= raw office.the_content%>
							</div>
							<div class="map">
								<%= raw office.the_field("map-code")%>
							</div>

						</div>
					<%else%>
						 <h2 class="no-margin">
								<%= office.the_title%>
								<small>
									<%= office.the_meta("summary")%>
								</small>
						</h2>
						<div class="info">
							<div class="col-md-4 col-xs-12" style="padding-left:0">
								<%= raw office.the_content%>
							</div>
							<div class="col-md-8 col-xs-12 simple_form" style="padding-right:0">
								<%= raw office.the_field("map-code")%>
							</div>

						</div>

					<%end%>
				<%end%>
			</div>
		</section>

	</div>
</div>