<% mission = current_site.the_post("our-mission")%>
<% profile = current_site.the_post("company-profile")%>
<%  news = current_site.the_post_type("news")%>
<div id="content" style="display: block;">
	<!-- / Hompage -->
	<div class="header-image" style="background-image:url(<%= profile.the_thumb_url %>); ">
	</div>
	<div class="container" >
		<div class="row">
			<center  class="col-xs-12" itemprop="mainEntity" itemscope=""><h1><%=raw mission.the_meta("summary") %></h1>
			</center>
			
		</div>
		<div class="row">
			<section>
				<div class="col-xs-12 col-sm-3 submenu">
					<div class="tag">
						<%= t('aboutus')%>
					</div>
					<!-- / Subpages -->

					<%= raw get_nav_menu('aboutusmenu', 'aboutus')%>
				</div>
				<div class="col-xs-12  col-sm-9">
					<% news.the_posts.decorate.each_with_index do |newsitem,index|%> 
		
						<div class="job" id="mep_<%=index%>">
							<div class="small job-date">
								
								
							</div>
							<a aria-controls="mep_<%=index%>" aria-expanded="false" class="job collapsed" data-toggle="collapse" href="#job_mep_<%=index%>" role="button">
								<div class=" row" itemprop="about">
                                 <div class="col-xs-12 col-sm-4 news"><%= image_tag newsitem.the_thumb_url %></div>
								 <div class="col-xs-12 col-sm-8">
								 <div class="small"><%= l(newsitem.the_field("news-date").to_date, format: t('date.formats.dateonly')) %></div>
								 <%= newsitem.the_title %></div>

									
								</div>
							</a>
							<div class="collapse" id="job_mep_<%=index%>" aria-expanded="false" style="height: 7px;">
								<div class="content">
								  <%= raw newsitem.the_content  %>
								</div>
							</div>
						</div>
					<%end%>
				</div>
			</section>
		</div>
	</div>
</div>